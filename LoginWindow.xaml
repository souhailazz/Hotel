<Window x:Class="Hotel.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="350" Width="525">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Email:" />
            <TextBox x:Name="EmailTextBox" Width="200" />

            <TextBlock Text="Password:" Margin="0,10,0,0" />
            <PasswordBox x:Name="PasswordBox" Width="200" />

            <TextBlock x:Name="ErrorTextBlock" Foreground="Red" Margin="0,10,0,0" />

            <Button x:Name="LoginButton" Content="Login" Width="100" Margin="0,20,0,0" Click="LoginButton_Click" />
        </StackPanel>
    </Grid>
</Window>
